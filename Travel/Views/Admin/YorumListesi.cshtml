@using Travel.Models.Sınıflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table>
    <tr>
        <th> ID  </th>
        <th> Kullanıcı  </th>

        <th> Mail   </th>
        <th> Yorum   </th>
        <th> BLOG   </th>
        <th> SİL   </th>
        <th> GÜNCELLE   </th>
        
    </tr>
    @foreach (var x in Model)
    {

   
    <tr>
        <td>@x.Id</td>
        <td>@x.KullaniciAdi</td>
        <td>@x.Mail</td>
        <td>@x.Yorum</td>
        <td>@x.Blog.Baslik</td>      
          <td> <a href="/Admin/YorumSil/@x.Id" class="btn btn-danger">Sil</a></td>
          <td> <a href="/Admin/YorumGetir/@x.Id" class="btn btn-warning">Güncelle</a></td>
    </tr>
    }
</table>